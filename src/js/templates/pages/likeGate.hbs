<div class="header"></div>
<div class="inner-container">
    <h1>{{lang "likeGate" "header"}}</h1>
    {{#if onFacebook}}
        <p>{{lang "likeGate" "desktop-like"}}</p>
        <div class="fb-likebox">
            <div class="fb-like-box" data-href="https://www.facebook.com/{{pageId}}" data-colorscheme="light" data-show-faces="false" data-header="false" data-stream="false" data-show-border="false"></div>
        </div>
    {{else}}
        <p>{{lang "likeGate" "mobile-login"}}</p>
        <div class="social-wrap {{#if loggedIn}}disabled{{/if}}">
            <button id="js-fb-login" class="facebook">Aanmelden</button>
        </div>
        <hr/>
        <h1>{{lang "likeGate" "mobile-like-header"}}</h1>
        <p>{{lang "likeGate" "mobile-like-copy"}}</p>
        <div class="fb-likebox {{#unless loggedIn}}disabled{{/unless}}">
            <div class="fb-like-box" data-href="https://www.facebook.com/{{pageId}}" data-colorscheme="light" data-show-faces="false" data-header="false" data-stream="false" data-show-border="false"></div>
        </div>
    {{/if}}
    <p class="legal">{{lang "likeGate" "legal"}}</p>
</div>
